<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lgn_dark_purple"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="219dp"
        android:layout_height="65dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/petpet" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="416dp"
        android:layout_height="343dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:src="@drawable/image"
        tools:layout_editor_absoluteX="-4dp"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="41dp"
        android:layout_height="33dp"
        android:src="@drawable/group_1"
        tools:layout_editor_absoluteX="253dp"
        tools:layout_editor_absoluteY="80dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="270dp"
        android:layout_height="43dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/roboto"
        android:text="Make new Friends"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.229"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="234dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/roboto"
        android:text="Find loyal companions, Give love a home, Adopt Today!"
        android:textColor="@color/white"

        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button2"
        android:layout_width="145dp"
        android:layout_height="60dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="34dp"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/roboto"
        android:text="Exit"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="-3dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="145dp"
        android:layout_height="60dp"
        android:layout_marginStart="239dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="34dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/roboto"
        android:text="Start"
        android:textColor="@color/lgnPurple"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>